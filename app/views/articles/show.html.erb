<h3><%= @article.title %></h3>
<p><%= simple_format(@article.body) %></p>
<% if user_signed_in? && current_user.id == @article.creator %>
  <%= link_to "Edit Article", edit_article_path(@article) %>
  <%= link_to "Delete Article", @article, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


